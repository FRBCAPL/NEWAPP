# Social Media Chat Aggregator Configuration

# Server Configuration
SOCIAL_MEDIA_PORT=3001
NODE_ENV=development

# Stream Chat Configuration (Required)
VITE_STREAM_API_KEY=your_stream_chat_api_key_here
STREAM_API_SECRET=your_stream_chat_secret_here

# Facebook Integration (Optional)
FACEBOOK_ACCESS_TOKEN=your_facebook_page_access_token_here
FACEBOOK_VERIFY_TOKEN=your_facebook_webhook_verify_token_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# YouTube Integration (Optional)
YOUTUBE_API_KEY=your_youtube_data_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_oauth_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_oauth_client_secret_here

# Webhook URLs (for production deployment)
FACEBOOK_WEBHOOK_URL=https://yourdomain.com/webhook/facebook
YOUTUBE_WEBHOOK_URL=https://yourdomain.com/webhook/youtube

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# Logging Level
LOG_LEVEL=info

# Chat Moderation Settings
ENABLE_PROFANITY_FILTER=true
ENABLE_SPAM_DETECTION=true
MAX_MESSAGE_LENGTH=500
RATE_LIMIT_MESSAGES_PER_MINUTE=10